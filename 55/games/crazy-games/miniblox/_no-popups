          <script>
        // Function to decode Base64
        function decodeBase64(encoded) {
            return atob(encoded);
        }

        // Get the iframe element
        var iframe = document.getElementById('gameFrame');
        // Set the src attribute with the decoded link
        iframe.src = 'https://www.' + decodeBase64('Y3JhenlnYW1lcw==') +'.com'+'/embed'+'/miniblox/';
        // Set the sandbox attribute to restrict scripts
        iframe.setAttribute('sandbox', 'allow-same-origin allow-forms');

        // Remove the decoded link from console.log
        var originalLog = console.log;
        console.log = function() {
            var args = Array.from(arguments);
            args = args.map(function(arg) {
                if (typeof arg === 'string' && arg.includes('www.crazygames.com')) {
                    arg = 'Link to crazygames website';
                }
                return arg;
            });
            originalLog.apply(console, args);
        };

        // Disable right-click context menu
        window.addEventListener('contextmenu', function (e) {
            e.preventDefault();
        }, false);
    </script>
    
